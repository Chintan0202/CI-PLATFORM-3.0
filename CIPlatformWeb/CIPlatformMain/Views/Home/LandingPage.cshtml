                            else
                            {
                                <div class="">
                                    <button class="btn btn-outline-warning rounded-pill apply-btn mt-2 mb-1" onclick="Alert()">View Details</button>
                                </div>
                            }

                        </div>


                    </div>
                }
            </div>
        </div>



