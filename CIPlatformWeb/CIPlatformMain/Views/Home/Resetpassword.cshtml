@using CIPlatformMain.Entities.Models
@model CIPlatformMain.Entities.Models.PasswordReset

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   

    <link rel="stylesheet" href="/css/resetpage.css" />
    
    <title>Document</title>
</head>
<body>
    <div class="container-fluid" id="main-cont">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div id="carouselExampleSlidesOnly"
                     class="carousel "
                     data-bs-ride="carousel">
                   
                    <div class="carousel-inner">
                       
                         @foreach (var item in ViewData["Banners"] as IList<Banner>)
                        {
                            if (item.SortOrder==1)
                            {
                                <div class="carousel-item active">
                            <img src="@item.Image"
                                 class="d-block w-100"
                                 alt="..." />
                            <div class="carousel-caption d-none d-md-block">
                                <h3>Sed ut perspiciatis unde omnis iste natus voluptatem.</h3>
                                <p class="text-start">
                                @item.Text  
                                </p>
                            </div>
                        </div>
                            }
                            else
                            {
                                 <div class="carousel-item">
                            <img src="@item.Image"
                                 class="d-block w-100"
                                 alt="..." />
                            <div class="carousel-caption d-none d-md-block">
                                <h3 class="text-start">Second slide </h3>
                                <p class="text-start">
                                    @item.Text </p>
                            </div>
                        </div>
                            }
                        }

                        
                      
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleSlidesOnly" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleSlidesOnly" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-lg-4">
                <form asp-action="Resetpassword">
                    <h5 class="text-center" id="title">New Password</h5>
                    <p class="text-center" id="disc">Please enter your new password in field below</p>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label ">New Passowrd</label>
                        <input type="password"
                               placeholder="********"
                               class="form-control "
                               id="exampleInputEmail1"
                               aria-describedby="emailHelp" 
                               
                               asp-for="Password"/>
                        <span class="text text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label ">Conform Passowrd</label>
                        <input type="password"
                               placeholder="*********"
                               class="form-control "
                               id="exampleInputEmail1"
                               aria-describedby="emailHelp"
                               asp-for="ConfirmPassword"
                               />
                         <span class="text text-danger " asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <input type="submit" class="btn" id="reset-btn" value="Change My Password"/>
                </form>
                @if (ViewBag.Resetstatus == 1){
                  <script>
                      
                      alert("Password has been changed");
                  </script>
                }
                <div class="alert text-center mb-0" role="alert">
                        <a asp-controller="Home" asp-action="Login" class="alert-link " style="text-decoration:none;">Login Now</a>
                    </div>

                   <div class="text-center">
            <a   asp-controller="Home" asp-action="PrivacyPolicy" id="pr" style="margin:auto;text-decoration:none"  >Privacy Policy</a>
            </div> 


            </div>
        </div>
    </div>
</body>
</html>
